<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고객관리"
        android:id="@+id/textView"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/textTitle"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ff5729"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/listView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/textTitle"
        android:layout_above="@+id/linearLayout4"
        android:background="#ffd4b3ff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout5"
        android:background="#ffffd6b9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout4">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nameEditText"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:hint="이름" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ageEditText"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/editText3"
                android:layout_toEndOf="@+id/editText3"
                android:layout_weight="1"
                android:hint="나이"
                android:inputType="number" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/telEditText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:hint="전화번호" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addrEditText"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/editText3"
            android:layout_toEndOf="@+id/editText3"
            android:layout_weight="1"
            android:hint="주소" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="onInitButtonClicked"
            android:background="@drawable/back" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"
            android:id="@+id/buttonWeb"
            android:onClick="onButton1Clicked"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:textSize="20dp"
            android:background="@drawable/back" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="onDelButtonClicked"
            android:background="@drawable/back" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:textSize="20dp"
            android:onClick="onCloseButtonClicked"
            android:background="@drawable/back" />
    </LinearLayout>

</LinearLayout>
